# Django Production Environment Configuration

# Database
DATABASE_URL=postgresql://user:password@hostname:5432/database_name

# Redis Cache and Celery
REDIS_URL=redis://hostname:port/0
USE_REDIS=true
CELERY_BROKER_URL=redis://hostname:port/0
CELERY_RESULT_BACKEND=redis://hostname:port/0

# Django Core Settings
DJANGO_SECRET_KEY=your-very-long-random-secret-key-here
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=your-domain.com,your-render-app.onrender.com
DJANGO_SETTINGS_MODULE=intelligent_lms.settings.production

# Security Settings
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# CORS Settings for Frontend
CORS_ALLOWED_ORIGINS=https://your-frontend.onrender.com,https://your-custom-domain.com

# AI Service Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4

# Email Configuration (Optional)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# File Storage (Optional - for production media files)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-east-1

# Logging
DJANGO_LOG_LEVEL=INFO

# Performance
DJANGO_CACHE_TIMEOUT=3600
